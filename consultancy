<script>
    function openModal(service) {
        const modal = document.getElementById("modal");
        const title = document.getElementById("modal-title");
        const text = document.getElementById("modal-text");

        const serviceDetails = {
            setup: {
                title: "Google My Business Setup",
                text: "We ensure your business is properly listed on Google with accurate details, category selection, and optimized descriptions to boost visibility."
            },
            management: {
                title: "Monthly GMB Management",
                text: "We handle everything from responding to customer reviews, posting updates, answering questions, and optimizing your profile for higher rankings."
            },
            seo: {
                title: "SEO & Lead Generation",
                text: "Our strategies help improve your local SEO rankings, drive organic traffic, and increase lead conversions for your business."
            }
        };

        title.textContent = serviceDetails[service].title;
        text.textContent = serviceDetails[service].text;
        modal.style.display = "flex";
    }

    function closeModal() {
        document.getElementById("modal").style.display = "none";
    }

    // Close modal when clicking outside of it
    window.onclick = function(event) {
        const modal = document.getElementById("modal");
        if (event.target === modal) {
            closeModal();
        }
    };
</script>
